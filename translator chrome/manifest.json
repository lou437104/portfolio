{
    "manifest_version": 3,
    "name": "Translator",
    "author": "LGU programmes",
    "version": "1.0",
    "description": "A simple translator extension coded by : LGU programmes",
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "options_page": "options.html",
    "omnibox": {
        "keyword": "translate"
    },
    "commands": {
        "toggle-feature": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Toggle the feature"
        }
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Translator",
        "default_popup": "index.html"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Translator",
        "default_popup": "index.html"
    },
    "action": {
